{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://pdm-evaluator.local/schemas/rubric/v2.0.0",
  "title": "Rubric Scoring Configuration Schema",
  "description": "Schema for rubric_scoring.json - defines scoring modalities, CHESS phases, MESO clusters, and MACRO weights",
  "type": "object",
  "required": ["version", "chess_phases", "scoring_modalities", "meso_clusters", "macro_weights"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (MAJOR.MINOR.PATCH)"
    },
    "chess_phases": {
      "type": "object",
      "required": ["opening", "middle_game", "endgame"],
      "properties": {
        "opening": {
          "type": "object",
          "required": ["description", "parallel_execution", "target_producers"],
          "properties": {
            "description": {
              "type": "string"
            },
            "parallel_execution": {
              "type": "boolean"
            },
            "target_producers": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "dereck_beach",
                  "policy_processor",
                  "embedding_policy",
                  "semantic_chunking_policy",
                  "teoria_cambio",
                  "contradiction_deteccion",
                  "financiero_viabilidad_tablas"
                ]
              },
              "minItems": 1
            }
          }
        },
        "middle_game": {
          "type": "object",
          "required": ["description", "modality_aggregation"],
          "properties": {
            "description": {
              "type": "string"
            },
            "modality_aggregation": {
              "type": "string",
              "enum": ["weighted_average", "bayesian_fusion", "maximum", "minimum"]
            }
          }
        },
        "endgame": {
          "type": "object",
          "required": ["description", "convergence_strategy"],
          "properties": {
            "description": {
              "type": "string"
            },
            "convergence_strategy": {
              "type": "string",
              "enum": ["micro_meso_macro", "hierarchical", "flat"]
            }
          }
        }
      }
    },
    "scoring_modalities": {
      "type": "object",
      "required": ["TYPE_A", "TYPE_B", "TYPE_C", "TYPE_D", "TYPE_E", "TYPE_F"],
      "properties": {
        "TYPE_A": {
          "$ref": "#/definitions/scoring_modality"
        },
        "TYPE_B": {
          "$ref": "#/definitions/scoring_modality"
        },
        "TYPE_C": {
          "$ref": "#/definitions/scoring_modality"
        },
        "TYPE_D": {
          "$ref": "#/definitions/scoring_modality"
        },
        "TYPE_E": {
          "$ref": "#/definitions/scoring_modality"
        },
        "TYPE_F": {
          "$ref": "#/definitions/scoring_modality"
        }
      }
    },
    "meso_clusters": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/meso_cluster"
      }
    },
    "macro_weights": {
      "type": "object",
      "required": ["weights", "normalization"],
      "properties": {
        "weights": {
          "type": "object",
          "patternProperties": {
            "^P[1-9]|P10$": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          },
          "additionalProperties": false
        },
        "normalization": {
          "type": "string",
          "enum": ["sum_to_one", "max_one", "none"]
        }
      }
    }
  },
  "definitions": {
    "scoring_modality": {
      "type": "object",
      "required": ["name", "description", "question_ids", "weight"],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "question_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^P[1-9][0-9]?-D[1-6]-Q\\d{3}$"
          },
          "minItems": 1
        },
        "weight": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "aggregation_method": {
          "type": "string",
          "enum": ["average", "weighted_average", "minimum", "maximum", "bayesian"]
        }
      }
    },
    "meso_cluster": {
      "type": "object",
      "required": ["cluster_id", "name", "policy_areas", "dimensions", "weight"],
      "properties": {
        "cluster_id": {
          "type": "string",
          "pattern": "^MESO_[A-Z0-9_]+$"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "policy_areas": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^P[1-9]|P10$"
          },
          "minItems": 1
        },
        "dimensions": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^D[1-6]$"
          },
          "minItems": 1
        },
        "weight": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  }
}
